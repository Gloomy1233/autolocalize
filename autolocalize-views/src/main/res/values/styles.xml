<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Base style for AutoLocalize Language Picker -->
    <style name="Widget.AutoLocalize.LanguagePicker" parent="">
        <item name="al_textColor">?android:textColorPrimary</item>
        <item name="al_hintColor">?android:textColorHint</item>
        <item name="al_strokeColor">?colorOutline</item>
        <item name="al_strokeWidth">1dp</item>
        <item name="al_cornerRadius">8dp</item>
        <item name="al_textSize">16sp</item>
        <item name="al_showFlag">false</item>
        <item name="al_popupElevation">8dp</item>
        <item name="al_showLabelMode">displayName</item>
    </style>
    
    <!-- Outlined style variant -->
    <style name="Widget.AutoLocalize.LanguagePicker.Outlined" parent="Widget.AutoLocalize.LanguagePicker">
        <item name="al_strokeWidth">2dp</item>
        <item name="al_cornerRadius">12dp</item>
    </style>
    
    <!-- Filled style variant -->
    <style name="Widget.AutoLocalize.LanguagePicker.Filled" parent="Widget.AutoLocalize.LanguagePicker">
        <item name="al_strokeWidth">0dp</item>
        <item name="al_cornerRadius">8dp</item>
    </style>
    
    <!-- Compact style for toolbars -->
    <style name="Widget.AutoLocalize.LanguagePicker.Compact" parent="Widget.AutoLocalize.LanguagePicker">
        <item name="al_textSize">14sp</item>
        <item name="al_strokeWidth">1dp</item>
        <item name="al_cornerRadius">4dp</item>
    </style>
    
</resources>

