<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Language Picker Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.autolocalize.views.AutoLocalizeLanguagePickerView
                    android:id="@+id/languagePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:al_languages="@array/supported_language_tags"
                    app:al_languageLabels="@array/supported_language_labels"
                    app:al_hintText="@string/hint_select_language"
                    app:al_showLabelMode="nativeName"
                    app:al_displayMode="flagAndName"
                    app:al_cornerRadius="8dp"
                    app:al_strokeWidth="1dp"
                    app:al_textColor="@color/primary"
                    app:al_strokeColor="@color/primary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Resource Localization Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_resource_localization"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_resource_localization"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/greeting"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_change_language"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Placeholder Examples:"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textPlaceholder1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="4dp"
                    tools:text="You have 5 new messages" />

                <TextView
                    android:id="@+id/textPlaceholder2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="4dp"
                    tools:text="Welcome back, John!" />

                <TextView
                    android:id="@+id/textPlaceholder3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="4dp"
                    tools:text="John ordered 3 items for $50" />

                <TextView
                    android:id="@+id/textCurrentLocale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textStyle="italic"
                    android:textColor="@color/primary"
                    tools:text="Current locale: English" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Runtime Translation Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¤– User-Generated &amp; Backend Content"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_runtime_translation"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_backend_text"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textBackendOriginal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is sample backend content that needs runtime translation."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:background="@color/primary_light"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textBackendTranslated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/primary"
                    android:textStyle="italic"
                    android:layout_marginBottom="16dp"
                    tools:text="Translated text appears here..." />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_user_input"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editUserInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_enter_text"
                        android:inputType="textMultiLine"
                        android:minLines="2" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonTranslate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_translate"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_translated_text"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textUserTranslated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/primary"
                    android:textStyle="italic"
                    android:minHeight="48dp"
                    tools:text="Translation will appear here..." />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- View Tree Translation Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_view_tree_translation"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_view_tree_translation"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/textTaggedTranslate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="al_translate"
                    android:text="This hardcoded text will be automatically translated (tagged with al_translate)."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:background="@color/success"
                    android:textColor="@android:color/white"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textTaggedNoTranslate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="al_no_translate"
                    android:text="This text is excluded from automatic translation (tagged with al_no_translate)."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:background="@color/warning"
                    android:textColor="@android:color/black"
                    android:padding="12dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Model Status Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_model_status"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_download_status"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/textModelStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/primary"
                        tools:text="Ready" />

                </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressDownload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:indeterminate="true"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDownloadModels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_download_models"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

